@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="form-box">
        <h3>Cadastre-se</h3>
        <form method="post" action="/Reservation/Post" class="inputs-form">
            <label for="room">Escolha a Sala</label>
            @Html.DropDownList("roomId", ViewBag.Rooms as List<SelectListItem>, "Selecione uma sala", new { @class = "form-control" })
            <input type="text" name="UsertEmail" placeholder="Email" required readonly value="@ViewBag.Email">
            <input type="datetime" name="date" placeholder="Data" required>
            <button type="submit">Reservar</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            alert(errorMessage); // Exibe o alerta com a mensagem de erro
        }
    </script>
}
